enum TrackerStatus: uint8 {
    NONE = 0,
    DISCONNECTED = 1,
    OK = 2,
    BUSY = 3,
    ERROR = 4,
    OCCLUDED = 5,
    TIMED_OUT = 6,
}

/// Temperature in degrees celsius
struct Temperature {
    temp: float32;
}

/// The 4 bytes of an ip address are stored in 32 bits in big endian order.
/// We will switch over to fixed size arrays when they are supported better.
struct Ipv4Address  {
    addr: uint32;
}

table Bytes {
    b: [uint8];
}

table StringTable {
    s: string;
}

enum MagnetometerStatus: uint8 {
    NOT_SUPPORTED = 0,
    DISABLED = 1,
    ENABLED = 2,
}

enum RestCalibrationStatus: uint8 {
    NOT_SUPPORTED = 0,
    NOT_CALIBRATED = 1,
    CALIBRATED = 2,
}
